<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox maxHeight="-Infinity" maxWidth="800.0" minHeight="-Infinity" minWidth="800.0" prefHeight="150.0" prefWidth="800.0" spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.GUI.ItemInCartController">
   <children>
      <ImageView fx:id="image" fitHeight="125.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
      <VBox prefHeight="110.0" prefWidth="138.0" spacing="10.0">
         <children>
            <Label text="Product Name : " />
            <Label fx:id="productName" text="Label" />
         </children>
      </VBox>
      <VBox prefHeight="110.0" prefWidth="121.0" spacing="10.0">
         <children>
            <Label text="Seller :" />
            <Label fx:id="sellerUserName" text="Label" />
         </children>
      </VBox>
      <VBox prefHeight="110.0" prefWidth="119.0" spacing="10.0">
         <children>
            <Label text="Price :" />
            <Label fx:id="price" text="Label" />
         </children>
      </VBox>
      <VBox prefHeight="110.0" prefWidth="117.0" spacing="10.0">
         <children>
            <Label text="Total Price :" />
            <Label fx:id="totalPrice" text="Label" />
         </children>
      </VBox>
      <HBox spacing="2.0">
         <children>
            <Button fx:id="decrease" mnemonicParsing="false" onAction="#decrease" prefHeight="25.0" prefWidth="27.0" text="-" />
            <TextField fx:id="count" prefHeight="25.0" prefWidth="27.0" />
            <Button fx:id="increase" mnemonicParsing="false" onAction="#increase" prefHeight="25.0" prefWidth="29.0" text="+" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
